{
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "builds": [
    { "src": "frontend/**.html", "use": "@vercel/static" },
    { "src": "*.py", "use": "@vercel/python" },
    { "src": "backend/**.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/.*", "dest": "/backend/app.js" },
    { "src": "/.*", "dest": "/frontend/**" }
  ]
}
